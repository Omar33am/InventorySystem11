<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="InventorySystem.MainWindow"
        Title="Inventory System"
        Width="820"
        Height="600">

    <StackPanel Margin="20" Spacing="10">

        <TextBlock Text="Queued Orders" FontWeight="Bold"/>
        <ListBox x:Name="QueuedOrdersList" Height="120"/>

        <TextBlock Text="Processed Orders" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListBox x:Name="ProcessedOrdersList" Height="120"/>

        <Button x:Name="ProcessButton" Content="Process Next Order" Width="220" />

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Total revenue:" FontWeight="Bold"/>
            <TextBox x:Name="RevenueText" Width="200" IsReadOnly="True"/>
        </StackPanel>

        <TextBlock Text="Status Messages" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBlock x:Name="StatusMessages" Height="120" TextWrapping="Wrap"/>

    </StackPanel>
</Window>